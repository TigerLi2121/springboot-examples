<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    <springProperty scope="context" name="app.name" source="spring.application.name"/>
    <springProfile name="dev">
        <property name="log.path" value="./logs/${app.name}"/>
    </springProfile>
    <springProfile name="fat">
        <property name="log.path" value="/logs/${app.name}"/>
    </springProfile>
    <springProfile name="pro">
        <property name="log.path" value="/var/log/${app.name}"/>
    </springProfile>
    <property name="log.pattern" value="[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%level] [%mdc{trace_id}] [%mdc{span_id}] [%t] [%logger{36}:%L] %msg%n"/>

    <!-- 输出到控制台 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${log.pattern}</pattern>
        </encoder>
    </appender>

    <appender name="OTEL" class="io.opentelemetry.instrumentation.logback.mdc.v1_0.OpenTelemetryAppender">
        <appender-ref ref="CONSOLE"/>
    </appender>

    <!-- 输出到文件 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.path}/${app.name}.log</file>
        <encoder>
            <pattern>${log.pattern}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/${app.name}.%d{yyyy-MM-dd}.log.%i</fileNamePattern>
            <maxHistory>7</maxHistory>
            <maxFileSize>500MB</maxFileSize>
            <totalSizeCap>80GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <appender name="OTEL_FILE" class="io.opentelemetry.instrumentation.logback.mdc.v1_0.OpenTelemetryAppender">
        <appender-ref ref="FILE"/>
    </appender>

    <root level="INFO">
        <springProfile name="dev">
            <appender-ref ref="OTEL"/>
        </springProfile>
        <appender-ref ref="OTEL_FILE"/>
    </root>

    <logger name="com.example" level="debug"/>
</configuration>
